rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['points']);
      allow read, update, create, delete: if request.auth.token.admin == true;
    }
    match /teachers/{teacher} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }
  }
}